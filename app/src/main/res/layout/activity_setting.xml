<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.gogeta.Main2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_splash">
        <ImageView android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <LinearLayout android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@color/background_splash">
        <Button android:id="@+id/pemesanan"

            android:text="Home"
            android:textColor="@color/putih"
            android:background="@color/background_splash"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content" />
        <Button android:id="@+id/history"
            android:text="History"
            android:textColor="@color/putih"
            android:background="@color/background_splash"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content" />
        <Button android:id="@+id/setting"
            android:text="Setting"
            android:textColor="@color/putih"
            android:background="@color/background_splash"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="icon"/>
            <Button android:id="@+id/profiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/putih"
                android:text="Profile"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="icon"/>
            <Button android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/putih"
                android:text="Logout"
                android:textColor="@color/black"
                android:layout_marginBottom="1dp"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
