<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.gogeta.MelihatPemesanan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_splash">
        <ImageView android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <LinearLayout android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@color/background_splash">
        <Button android:id="@+id/pemesanan"

            android:text="Home"
            android:textColor="@color/putih"
            android:background="@color/background_splash"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content" />
        <Button android:id="@+id/history"
            android:text="History"
            android:textColor="@color/putih"
            android:background="@color/background_splash"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content" />
        <Button android:id="@+id/setting"
            android:text="Setting"
            android:textColor="@color/putih"
            android:background="@color/background_splash"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request guru"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingBottom="5sp"
            android:background="@color/abuabu"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ListView android:id="@+id/pemesanannya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            <TextView android:id="@+id/cepor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"/>
        </LinearLayout>



    </ScrollView>

</LinearLayout>
